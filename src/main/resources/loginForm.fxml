<AnchorPane fx:id="rootNode" prefHeight="400.0" prefWidth="600.0" style="-fx-background-image: #cb9fed;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.loginFormController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0">
         <image>
            <Image url="@assets/images/photo-1512428197675-daae5d4e1e43.jpeg" />
         </image>
      </ImageView>
      <Label layoutX="254.0" layoutY="25.0" prefHeight="54.0" prefWidth="91.0" text="Login" textFill="WHITE">
         <font>
            <Font name="Calisto MT Bold" size="35.0" />
         </font>
      </Label>
      <TextField fx:id="txtUserName" layoutX="188.0" layoutY="125.0" prefHeight="36.0" prefWidth="222.0" promptText="enter your username here" />
      <Label layoutX="188.0" layoutY="102.0" prefHeight="18.0" prefWidth="66.0" text="Username" textFill="WHITE">
         <font>
            <Font name="Calisto MT" size="14.0" />
         </font>
      </Label>
      <Label layoutX="188.0" layoutY="179.0" prefHeight="18.0" prefWidth="57.0" text="Password" textFill="WHITE">
         <font>
            <Font name="Calisto MT" size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="txtPassword" layoutX="188.0" layoutY="200.0" prefHeight="36.0" prefWidth="222.0" promptText="enter your password here" />
